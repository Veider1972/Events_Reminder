<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widgetPreviewLinearLayout"
    android:padding="2dp"
    android:background="@drawable/sample_background"
    android:orientation="vertical">
    <!--<ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintBottom_toBottomOf="@id/background"
        android:src="@drawable/sample_background"
        android:scaleType="centerCrop"/>-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/color_primary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <LinearLayout
                android:id="@+id/firstItemPreviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/widget_textview_margin"
                android:background="@color/widget_first_line_default_color"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstPreviewItemDaysTo"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_item_preview_first_days_to"
                    android:textColor="@color/purple_700"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstPreviewItemDate"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_item_preview_first_date"
                    android:textColor="@color/purple_700"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstPreviewItemTitle"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/widget_item_preview_first_title"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondItemPreviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/widget_textview_margin"
                android:background="@color/widget_second_line_default_color"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/secondPreviewItemDaysTo"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_second_item_preview_days_to"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/secondPreviewItemDate"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_second_item_preview_date"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secondPreviewItemTitle"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/widget_second_item_preview_title"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secondPreviewItemAge"
                    android:layout_marginStart="@dimen/widget_textview_margin"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_second_item_preview_age"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdItemPreviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/widget_textview_margin"
                android:background="@color/widget_first_line_default_color"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secondItemPreviewLinearLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/thirdPreviewItemDaysTo"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_third_item_preview_days_to"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/thirdPreviewItemDate"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_third_item_preview_date"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thirdPreviewItemTitle"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/widget_third_item_preview_title"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thirdPreviewItemAge"
                    android:layout_marginStart="@dimen/widget_textview_margin"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_third_item_preview_age"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forthItemPreviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/widget_textview_margin"
                android:background="@color/widget_second_line_default_color"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thirdItemPreviewLinearLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/forthPreviewItemDaysTo"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_forth_item_preview_days_to"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/forthPreviewItemDate"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_forth_item_preview_date"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/forthPreviewItemTime"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/widget_forth_item_preview_time"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forthPreviewItemTitle"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/widget_forth_item_preview_title"
                    android:textColor="@color/light_blue_900"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fifthItemPreviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/appwidget_relative_layout_padding"
                android:background="@color/widget_first_line_default_color"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/fifthPreviewItemDaysTo"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/fifth_widget_preview_item_days_to"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_textview_margin"
                    android:id="@+id/fifthPreviewItemDate"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="@string/fifth_widget_preview_item_date"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fifthPreviewItemTitle"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="@string/widget_item_preview_first_title"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>